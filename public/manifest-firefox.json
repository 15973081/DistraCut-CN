{
  "manifest_version": 3,
  "name": "断燥",
  "description": "切断数字干扰，保留真正重要的专注",
  "version": "1.1.1",
  "icons": {
    "64": "icon_64.png",
    "256": "icon_256.png"
  },
  "action": {
    "default_title": "断燥"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module",
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
        "id": "mayunnan-firefox-addon@666.com",
        "data_collection_permissions": {
        "required": [
        "none"
        ]
      }     
    }
  },
  "incognito": "split"
}
