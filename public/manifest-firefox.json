{
  "manifest_version": 3,
  "name": "断燥",
  "description": "切断数字干扰，保留真正重要的专注",
  "version": "1.0.1",
  "icons": {
    "192": "icon_192.png",
    "512": "icon_512.png"
  },
  "action": {
    "default_icon": {
      "192": "icon_192.png",
      "512": "icon_512.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.mjs"],
    "type": "module"
  },
  "incognito": "spanning",
  "browser_specific_settings": {
    "gecko": {
      "id": "{5D2A6F66-7AC0-6750-AFBA-1DA7C98A3086}"
    }
  }
}
