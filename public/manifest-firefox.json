{
  "manifest_version": 3,
  "name": "断燥",
  "description": "切断数字干扰，保留真正重要的专注",
  "version": "1.1.1",
  "icons": {
    "192": "icon_192.png",
    "512": "icon_512.png"
  },
  "action": {
    "default_title": "断燥"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module",
    "persistent": false
  },
  "incognito": "split"
}
