{
  "manifest_version": 3,
  "name": "断燥",
  "description": "切断数字干扰，保留真正重要的专注",
  "version": "1.0.1",
  "icons": {
    "192": "icon_192.png",
    "512": "icon_512.png"
  },
  "action": {
    "default_icon": {
      "192": "icon_192.png",
      "512": "icon_512.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "incognito": "split",
  "minimum_chrome_version": "92"
}
